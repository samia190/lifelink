# ===========================================
# LIFELINK MENTAL MEDICAL CENTER
# Environment Configuration
# ===========================================

# Application
NODE_ENV=development
APP_NAME=LifeLink Mental Medical Center
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
PORT=4000

# Database (PostgreSQL)
DATABASE_URL=postgresql://lifelink_user:secure_password@localhost:5432/lifelink_db?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Two-Factor Authentication
TWO_FA_APP_NAME=LifeLink

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key!
ENCRYPTION_IV=your-16-char-iv!

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@lifelink.co.ke
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@lifelink.co.ke
EMAIL_FROM_NAME=LifeLink Mental Medical Center

# SMS (Africa's Talking - Kenya)
AT_API_KEY=your-africastalking-api-key
AT_USERNAME=your-africastalking-username
AT_SENDER_ID=LIFELINK

# M-Pesa (Safaricom Daraja API)
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your-mpesa-passkey
MPESA_CALLBACK_URL=https://api.lifelink.co.ke/payments/mpesa/callback
MPESA_ENVIRONMENT=sandbox

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AI / LLM
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.3

# WebRTC / Video (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=af-south-1
AWS_S3_BUCKET=lifelink-secure-files

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=your-session-secret-change-in-production

# Crisis Contacts (Kenya)
CRISIS_HOTLINE=0800 723 253
CRISIS_EMAIL=crisis@lifelink.co.ke
EMERGENCY_NUMBER=999

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn
